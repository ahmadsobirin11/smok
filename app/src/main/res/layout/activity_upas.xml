<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.smok.ahmad.smok.UpasActivity"
    android:id="@+id/drawerLayout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/imageView5"
                android:src="@drawable/logosmok"

                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Denah Parkir"
        android:textColor="@color/text"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        />
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P1"
        android:id="@+id/buttonP1"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        android:onClick="klikp1"
       />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P2"
        android:id="@+id/buttonP2"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
         />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/p3"
        android:id="@+id/buttonP3"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
         />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P4"
        android:id="@+id/buttonP4"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
         />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P5"
        android:id="@+id/buttonP5"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P6"
        android:id="@+id/buttonP6"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P7"
        android:id="@+id/buttonP7"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P8"
        android:id="@+id/buttonP8"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P9"
        android:id="@+id/buttonP9"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="P10"
        android:id="@+id/buttonP10"
        android:background="@color/parkirkosong"
        android:textColor="@color/text"
        android:layout_margin="1dp"
         />
    </LinearLayout>





    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Warna merah = Terisi"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Warna Kuning = Booking"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Warna Hijau = Kosong"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_drawer"
                android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/daftarmenu"
        app:headerLayout="@layout/header">
    </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
