<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smok.ahmad.smok.WaktuActivity"

    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/imageView5"
                android:src="@drawable/logosmok"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="P1"
                android:id="@+id/button12"
                />
<LinearLayout
    android:layout_weight="15"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BOOKING P1"
                android:layout_marginLeft="12dp"
                android:textSize="25dp"
                android:textColor="@color/text"
                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tanggal"
        android:layout_marginLeft="12dp"
        android:id="@+id/textView11"
        android:textSize="15dp"
        android:textColor="@color/text"
        />
</LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Waktu Anda:"
            android:id="@+id/textView8"
            android:textColor="@color/text"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10 : 10 : 10"
            android:id="@+id/timer"
            android:textColor="@color/text"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="40dp"

            />





     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selesai Parkir"
            android:background="#ff0000"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Tambah Waktu"
             android:layout_margin="5dp"
             android:layout_weight="1"
             android:background="#3cff00"
             android:textStyle="bold"/>
     </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Unik"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="AFH48994"
            android:textColor="@color/text"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="40dp"

            />



    </LinearLayout>

</LinearLayout>
